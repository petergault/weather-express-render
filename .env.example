# Azure Maps API Configuration
AZURE_MAPS_API_KEY=your_azure_maps_api_key_here
AZURE_MAPS_BASE_URL=https://atlas.microsoft.com

# Open Meteo API Configuration (free, no key required)
OPEN_METEO_BASE_URL=https://api.open-meteo.com

# RapidAPI Configuration for Foreca
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=foreca-weather.p.rapidapi.com

# Google Weather API Configuration
GOOGLE_WEATHER_API_KEY=your_google_weather_api_key_here
GOOGLE_WEATHER_BASE_URL=https://weather.googleapis.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Demo Mode (set to 'true' to enable demo mode with mock data)
DEMO_MODE=false